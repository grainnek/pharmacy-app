<script>
//when login button is clicked 
$( "#loginbutton" ).click(function() {
	//variables assigned based on input values
	var uname = $( "#uname" ).val();
	var pword = $( "#pword" ).val();
	
	//post variables to the login php route
	$.post( "/login", { role:"customer", username:uname, password:pword})
	.done(function( data ) {	
	if(data=="fail") {
	    alert("Sorry, incorrect username or password. Try again.");
		}
	else {
		alert(data);
	window.location="/menu";
	}
	});
	});
		
</script>

